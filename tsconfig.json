{
  "compilerOptions": {
    // --- Next.js / App Router Specific Configuration ---
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    
    // FIX 1: Use a modern module resolution setting (node16, nodenext, or bundler)
    // 'bundler' is the recommended setting for Next.js 13+ / App Router
    "moduleResolution": "bundler", 
    
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    // --- Path Alias Configuration ---
    // FIX 2: Define base URL and paths for the '@/' alias
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"] 
    },
    
    // Vercel deployment requires Next.js environment
    "plugins": [
      {
        "name": "next"
      }
    ],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}